# ==============================================
# CRYPTO TRADING BOT - ENVIRONMENT VARIABLES  
# ==============================================

# ============ BYBIT API CREDENTIALS ============
# Testnet için: https://testnet.bybit.com → API Management
# Mainnet için: https://www.bybit.com → API Management
BYBIT_API_KEY=your_testnet_api_key_here
BYBIT_API_SECRET=your_testnet_secret_here

# ============ BOT CONFIGURATION ============
# MUTLAKA testnet ile başlayın!
TESTNET=true

# Trading symbols (virgülle ayırın)
SYMBOLS=BTC/USDT:USDT,ETH/USDT:USDT

# Leverage (1x, 2x, 3x, 5x, 10x vb.)
LEVERAGE=3

# Her işlemde risk edilecek sermaye oranı (0.01 = %1)
RISK_PER_TRADE=0.01

# ============ STRATEGY PARAMETERS ============
# RSI oversold seviyesi (genelde 20-30 arası)
RSI_OVERSOLD=30

# RSI overbought seviyesi (genelde 60-80 arası)  
RSI_OVERBOUGHT=60

# Hacim çarpanı (1.5x, 1.8x, 2x vb.)
VOLUME_MULTIPLIER=1.8

# Take Profit oranı (0.06 = %6)
TAKE_PROFIT=0.06

# Stop Loss oranı (0.03 = %3)
STOP_LOSS=0.03

# Trailing stop başlama oranı (0.03 = %3 kar geçince)
TRAILING_TRIGGER=0.03

# Trailing stop mesafesi (0.015 = %1.5)
TRAILING_DISTANCE=0.015

# ============ RISK MANAGEMENT ============
# Kaç ardışık kayıptan sonra dursun (3 önerilir)
MAX_CONSECUTIVE_LOSSES=3

# Kaç saat pause olsun (24 önerilir)
PAUSE_HOURS=24

# Likidasyon koruması minimum marj (0.05 = %5)
LIQUIDATION_MARGIN=0.05

# ============ LOGGING & MONITORING ============
# Log seviyesi (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# CSV log dosyası adı
CSV_LOG_FILE=logs/trades.csv

# System log dosyası adı
SYSTEM_LOG_FILE=logs/system.log

# ============ ADVANCED SETTINGS ============
# API rate limit (saniye cinsinden bekleme)
RATE_LIMIT_WAIT=10

# Position check interval (dakika cinsinden)
POSITION_CHECK_INTERVAL=10

# Funding rate kontrol saatleri (UTC, virgülle ayırın)
FUNDING_CHECK_HOURS=0,8,16

# Yüksek funding rate eşiği (0.01 = %1)
HIGH_FUNDING_THRESHOLD=0.01

# ============ BACKTEST SETTINGS ============
# Backtest başlangıç tarihi (YYYY-MM-DD)
BACKTEST_START_DATE=2023-01-01

# Backtest bitiş tarihi (YYYY-MM-DD)
BACKTEST_END_DATE=2024-05-01

# Backtest başlangıç sermayesi (USDT)
BACKTEST_INITIAL_BALANCE=1000

# ============ NOTIFICATIONS ============
# Discord webhook (opsiyonel)
DISCORD_WEBHOOK_URL=

# Email settings (opsiyonel)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_TO=

# ============ DEVELOPMENT ============
# Debug modu (true/false)
DEBUG_MODE=false

# Paper trading modu (true/false - gerçek para kullanmaz)
PAPER_TRADING=false

